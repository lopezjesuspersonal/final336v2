<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("partials/head.ejs") %>
        <title>Your Playlists</title>
</head>

<body style="text-align: center;">
    <h1 id="title"> VYNL </h1>
    <%- include("partials/testnav.ejs") %>
    <h1>Your Playlists</h1>
        <br>

        <div class="profilePageInfo">
            <span class="profilePagePart">
                <h3 class="searchDivItem">Create New Playlist</h3>
                <form action="/create-playlist" method="POST">
                    <div class="searchDivItem"><input type="text" name="name" placeholder="Playlist Name" required></div><br>
                    <div class="searchDivItem"><button class="searchButton" type="submit">Create</button></div>
                </form>
            </span>
        </div>
        <br>

        <div class="profilePageInfo">
            <span class="profilePagePart">
                <% if (playlists.length===0) { %>
                    <p>No playlists yet.</p>
                    <% } else { %>
                        <ul style="list-style-type: none; padding: 0;">
                            <% for(let playlist of playlists) { %>
                                <div class="searchDivItem">
                                <li>
                                    <strong>
                                        <%= playlist.playlistName %>
                                    </strong> -
                                    <a class="homeButtons" href="/playlist/<%= playlist.playlistId %>">View Songs</a>
                                </li>
                                </div>
                                <% } %>
                        </ul>
                        <% } %>
            </span>
        </div>

        <%- include("partials/footer") %>
</body>

</html>